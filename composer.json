{
    "name": "zendaemon/service-layer",
    "description": "Service layer for laravel applications",
    "keywords": [
        "zen",
        "zendaemon",
        "laravel",
        "service",
        "service layer",
        "business layer",
        "business logic"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "zendaemon",
            "email": "denis.olenin@outlook.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2.5",
        "illuminate/support": "^5|^6|^7"
    },
    "require-dev": {
        "orchestra/testbench": "^3.8 || ^4.0",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Zendaemon\\Services\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zendaemon\\Services\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Zendaemon\\Services\\ServicesServiceProvider"
            ]
        }
    }
}
